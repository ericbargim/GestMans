<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <TextView
        android:id="@+id/tvNameTicket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="@color/purpleGradient"
        android:textSize="15sp"
        android:text="name"
        android:layout_weight="1"/>
    <ImageButton
        android:id="@+id/btnSubtractTicket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_subtract"
        android:backgroundTint="@color/purpleGradient"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="2"/>
    <TextView
        android:id="@+id/tvQuantityTicket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/purpleGradient"
        android:textSize="15dp"
        android:padding="10dp"
        android:text="1"
        android:gravity="center"
        android:layout_weight="2"/>
    <ImageButton
        android:id="@+id/btnAddTicket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_add"
        android:backgroundTint="@color/purpleGradient"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_weight="2"/>
    <ImageButton
        android:id="@+id/btnRemoveTicket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_remove"
        android:backgroundTint="@color/red"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_weight="2"/>
</LinearLayout>